<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bottom_border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImageViewChoiceQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TextQuestion"
        app:srcCompat="@color/background"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/InputChoiceQuestion"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/InputChoiceQuestion" />

    <RadioButton
        android:id="@+id/RadioChoiceC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  c"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/InputChoiceC"
        app:layout_constraintLeft_toLeftOf="@+id/RadioChoiceA"
        app:layout_constraintTop_toTopOf="@+id/InputChoiceC" />

    <RadioButton
        android:id="@+id/RadioChoiceA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:checked="true"
        android:text="  a"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/InputChoiceA"
        app:layout_constraintLeft_toLeftOf="@+id/InputChoiceQuestion"
        app:layout_constraintTop_toTopOf="@+id/InputChoiceA" />

    <TextView
        android:id="@+id/TextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Question"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/InputChoiceB"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/InputChoiceA"
        app:layout_constraintRight_toRightOf="@+id/InputChoiceA"
        app:layout_constraintTop_toBottomOf="@+id/InputChoiceA" />

    <EditText
        android:id="@+id/InputChoiceC"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/InputChoiceA"
        app:layout_constraintRight_toRightOf="@+id/InputChoiceA"
        app:layout_constraintTop_toBottomOf="@+id/InputChoiceB" />

    <EditText
        android:id="@+id/InputChoiceD"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/InputChoiceC"
        app:layout_constraintRight_toRightOf="@+id/InputChoiceC"
        app:layout_constraintTop_toBottomOf="@+id/InputChoiceC" />

    <RadioButton
        android:id="@+id/RadioChoiceB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  b"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/InputChoiceB"
        app:layout_constraintLeft_toLeftOf="@+id/RadioChoiceA"
        app:layout_constraintTop_toTopOf="@+id/InputChoiceB" />

    <EditText
        android:id="@+id/InputChoiceQuestion"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="@+id/TextQuestion"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ImageViewChoiceQuestion"
        app:layout_constraintHorizontal_bias="0.0" />

    <RadioButton
        android:id="@+id/RadioChoiceD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  d"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/InputChoiceD"
        app:layout_constraintLeft_toLeftOf="@+id/RadioChoiceA"
        app:layout_constraintTop_toTopOf="@+id/InputChoiceD" />

    <EditText
        android:id="@+id/InputChoiceA"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/RadioChoiceA"
        app:layout_constraintRight_toRightOf="@+id/InputChoiceQuestion"
        app:layout_constraintTop_toBottomOf="@+id/InputChoiceQuestion" />

    <TextView
        android:id="@+id/TextQuestionPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="*Check correct answer."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ImageButtonSendChoiceQuestion"
        app:layout_constraintLeft_toLeftOf="@+id/RadioChoiceD"
        app:layout_constraintTop_toTopOf="@+id/ImageButtonSendChoiceQuestion" />

    <ImageButton
        android:id="@+id/ImageButtonUploadImageChoice"
        style="@style/IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/ImageButtonSendChoiceQuestion"
        app:layout_constraintRight_toLeftOf="@+id/ImageButtonSendChoiceQuestion"
        app:layout_constraintTop_toTopOf="@+id/ImageButtonSendChoiceQuestion"
        app:srcCompat="@drawable/ic_image" />

    <ImageButton
        android:id="@+id/ImageButtonSendChoiceQuestion"
        style="@style/IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/InputChoiceD"
        app:layout_constraintTop_toBottomOf="@+id/InputChoiceD"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_send_2" />

</android.support.constraint.ConstraintLayout>