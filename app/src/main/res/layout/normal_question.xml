<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bottom_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TextQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Question"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/InputNormalQuestion"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/TextQuestion"
        app:layout_constraintRight_toLeftOf="@+id/ImageButtonSendQuestion"
        app:layout_constraintTop_toBottomOf="@+id/TextQuestion" />

    <ImageButton
        android:id="@+id/ImageButtonUploadImage"
        style="@style/IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:cropToPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/ImageButtonSendQuestion"
        app:layout_constraintRight_toRightOf="@+id/ImageButtonSendQuestion"
        app:srcCompat="@drawable/ic_image" />

    <ImageButton
        android:id="@+id/ImageButtonSendQuestion"
        style="@style/IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/InputNormalQuestion"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_send_2" />
</android.support.constraint.ConstraintLayout>